#: kivy 1.9
#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager

ScreenHandler:
    ClockScreen:
    SettingsScreen:
    
<ClockLabel>:
    font_size: 50

<SetAlarmButton>:
    font_size: 16

<SleepButton>:
    font_size: 30

<WeatherStatusLabel>:
    font_size: 20

<SmartSleepStatusLabel>:
    font_size: 20

<NewsStatusLabel>:
    font_size: 20

<ClockScreen>:
    name: "clock"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/background.png"

    FloatLayout:
        Button:
            background_color: 0, 0, 0, 0
            size_hint: 0.2, 0.23
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "settings"
            pos_hint: {"right":1, "top":1}
            Image:
                source: "./images/settingicon.png"
                center_x: self.parent.center_x + 25
                center_y: self.parent.center_y 
                

        Button:
            background_color: 0, 0, 0, 0
            size_hint: 0.2, 0.23
            on_release: app.stop()
            pos_hint: {"left":1, "top":1}
            Image:
                source: "./images/powericon.png"
                center_x: self.parent.center_x - 25
                center_y: self.parent.center_y 

        SetAlarmButton:
            size_hint: 0.22, 0.17
            pos: root.width * 0.38, root.height*.68
            on_press: self.alarmPopup()

        ClockLabel:
            size_hint: 0.3, 0.19
            pos: root.width*0.35,root.height*0.5

        SleepButton:
            size_hint: 0.22, 0.17
            pos: root.width * 0.38, root.height*0.28

        AlarmStopButton:
            size_hint: 0.22, 0.17
            pos: root.width * 0.38, root.height*0.10
            font_size: 30

<SpecialFloatLayout>

<WeatherCheckBox>
    
<SmartSleepCheckBox>

<NewsCheckBox>

<SettingsScreen>:
    name: "settings"
    
    SpecialFloatLayout:
        Button:
            background_color: 0, 0, 0, 0
            size_hint: 0.2, 0.23
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "clock"
            pos_hint: {"left":1, "top":1}
            Image:
                source: "./images/clockicon.png"
                center_x: self.parent.center_x - 25
                center_y: self.parent.center_y 

        WeatherStatusLabel:
            size_hint: 0.1, 0.1
            pos: root.width * 0.22, root.height * 0.06
            id: wl

        SmartSleepStatusLabel:
            size_hint: 0.1, 0.1
            pos: root.width * 0.42, root.height * 0.06

        NewsStatusLabel:
            size_hint: 0.1, 0.1
            pos: root.width * 0.62, root.height * 0.06

        WeatherStatButton:
            size_hint: 0.15, 0.15
            pos: root.width * 0.2, root.height * 0.3
            on_press: self.updateWeather()

        SmartSleepStatButton:
            size_hint: 0.15, 0.15
            pos: root.width * 0.4, root.height * 0.3
            on_press: self.updateSmartSleep()

        NewsStatButton:
            size_hint: 0.15, 0.15
            pos: root.width * 0.6, root.height * 0.3
            on_press: self.updateNews()

        NewsArticleNum:
            size_hint: 0.15, 0.15
            pos: root.width * 0.4, root.height * 0.8
            on_press: self.updateArticleNum()

        NewsArticleNumLabel:
            size_hint: 0.15, 0.15
            pos: root.width * 0.53, root.height * 0.8

        NewsSourceButton:
            size_hint: 0.15, 0.15
            pos: root.width * 0.4, root.height * 0.6
            on_press: self.updateNewsSource()

        NewsSourceLabel:
            size_hint: 0.15, 0.15
            pos: root.width * 0.53, root.height * 0.6
        


           
		
