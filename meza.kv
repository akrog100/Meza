#: kivy 1.9
#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager

ScreenHandler:
    ClockScreen:
    SettingsScreen:
    
<ClockLabel>:
    font_size: 80

<ClockScreen>:
    name: "clock"
    

    FloatLayout:
        Button:
            size_hint: 0.2, 0.12
            text: "Settings"
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "settings"
            pos_hint: {"right":1, "top":1}

        Button:
            size_hint: 0.2, 0.12
            text: "Exit"
            on_release: app.stop()
            pos_hint: {"left":1, "top":1}

        ClockLabel:
            size_hint: 0.3, 0.19
            pos: root.width*0.35,root.height*0.4

<SettingsScreen>:
    name: "settings"
    
    FloatLayout:
        Button:
            size_hint: 0.2, 0.12
            text: "Back"
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "clock"
            pos_hint: {"left":1, "top":1}

        Label:
            font_size:100
            size_hint: 0.4, 0.4
            pos: root.width*0.35,root.height*0.4
            text: "Settings Options Go Here"


           
		
