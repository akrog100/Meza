#: kivy 1.9
#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager

ScreenHandler:
    ClockScreen:
    SettingsScreen:
    
<ClockLabel>:
    font_size: 50

<SleepButton>:
    font_size: 25

<WeatherStatusLabel>:
    font_size: 20

<SmartSleepStatusLabel>:
    font_size: 20

<NewsStatusLabel>:
    font_size: 20

<ClockScreen>:
    name: "clock"
    

    FloatLayout:
        Button:
            size_hint: 0.2, 0.12
            text: "Settings"
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "settings"
            pos_hint: {"right":1, "top":1}

        Button:
            size_hint: 0.2, 0.12
            text: "Exit"
            on_release: app.stop()
            pos_hint: {"left":1, "top":1}

        ClockLabel:
            size_hint: 0.3, 0.19
            pos: root.width*0.35,root.height*0.5

        SleepButton:
            size_hint: 0.22, 0.17
            pos: root.width * 0.38, root.height*0.33

        Label:
            font_size: 22
            text: "Weather:"
            size_hint: 0.1, 0.1
            pos: root.width * 0.23, root.height * 0.16

        Label:
            font_size: 22
            text: "SmartSleep:"
            size_hint: 0.1, 0.1
            pos: root.width * 0.43, root.height * 0.16

        Label:
            font_size: 22
            text: "News:"
            size_hint: 0.1, 0.1
            pos: root.width * 0.63, root.height * 0.16

        WeatherStatusLabel:
            size_hint: 0.1, 0.1
            pos: root.width * 0.23, root.height * 0.06

        SmartSleepStatusLabel:
            size_hint: 0.1, 0.1
            pos: root.width * 0.43, root.height * 0.06

        NewsStatusLabel:
            size_hint: 0.1, 0.1
            pos: root.width * 0.63, root.height * 0.06

<WeatherCheckBox>
    
<SmartSleepCheckBox>

<NewsCheckBox>

<SettingsScreen>:
    name: "settings"
    
    FloatLayout:
        Button:
            size_hint: 0.2, 0.12
            text: "Back"
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "clock"
            pos_hint: {"left":1, "top":1}

        Label:
            font_size: 20
            size_hint: 0.1, 0.1
            text: "Weather"
            pos: root.width * 0.2, root.height * 0.3

        Label:
            font_size: 20
            size_hint: 0.1, 0.1
            text: "SmartSleep"
            pos: root.width * 0.4, root.height * 0.3

        Label:
            font_size: 20
            size_hint: 0.1, 0.1
            text: "News"
            pos: root.width * 0.6, root.height * 0.3

        WeatherCheckBox:
            size_hint: 0.1, 0.1
            pos: root.width * 0.2, root.height * 0.2

        SmartSleepCheckBox:
            size_hint: 0.1, 0.1
            pos: root.width * 0.4, root.height * 0.2

        NewsCheckBox:
            size_hint: 0.1, 0.1
            pos: root.width * 0.6, root.height * 0.2

        


           
		
